<style>
  nav {
    padding: 2rem;
    width: fit-content;
    /* height: 100vh; */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  li a {
    display: grid;
    grid-template-columns: 50px 200px;
    font-weight: 500;
    align-items: center;
    margin-top: 1rem;
  }

  a {
    color: grey;
    transition: 0.1s ease-in;
  }

  a:hover {
    color: white;
    transition: 0.1s ease-in;
  }

  .cookie-link {
    font-size: 0.7rem;
  }

  ul {
    margin-top: 2rem;
  }

  .bottom-nav {
    height: 100px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: fit-content;
  }
</style>
